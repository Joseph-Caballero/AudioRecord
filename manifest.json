{
  "manifest_version": 2,
  "name": "Audio Recorder",
  "version": "1.0",
  "description": "Record audio from a Chrome tab and save it as an MP3 file",
  "permissions": [
    "tabCapture",
    "downloads",
    "storage",
    "tabs",
    "https://api.filezigzag.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
